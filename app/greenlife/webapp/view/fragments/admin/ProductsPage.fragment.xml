<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:t="sap.ui.table">
    <Table id="idPointsTable" inset="false" items="{
			path: 'productsModel>/',
			sorter: {
				path: 'name'
			}
		}">
        <infoToolbar>
            <OverflowToolbar>
                <Label text="{i18n>pointsTableLabel}"/>
            </OverflowToolbar>
        </infoToolbar>
        <columns>
            <Column>
                <Text text="{i18n>Product}" />
            </Column>
            <Column demandPopin="true">
                <Text text="{i18n>noOfProductsAssociated}" />
            </Column>
            <Column demandPopin="true">
                <Text text="{i18n>noOfProductsAssociated}" />
            </Column>

        </columns>
        <items>
            <ColumnListItem vAlign="Middle" type="Navigation" press="pressItem">
                <cells>
                    <ObjectIdentifier title="{productsModel>name}"/>
                    <Text text="{productsModel>}"/>
                    <Text text="{productsModel>}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>