<mvc:View controllerName="greenlife.controller.Report"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:c="sap.ui.core">
    <Page id="reportPage" showHeader="false" backgroundDesign="Transparent">
        <content>
            <VBox id="formVBox" class="sapUiLargeMargin">
                <VBox width="100%" alignItems="Center">
                    <HBox alignItems="Center">
                        <Title text ="{i18n>ReportCrimeWith}"/>
                        <Image src="{photoModel>/logo}" width="10rem" decorative="false"/>
                    </HBox>
                </VBox>
                <Label text="{i18n>doYouWishToSendAnonymously}"/>
                <Switch state="{visibilityModel>/isAnonymous}" customTextOn="Yes" customTextOff="No">
                    <layoutData>
                        <FlexItemData growFactor="1" />
                    </layoutData>
                </Switch>
                <VBox visible="{= !${visibilityModel>/isAnonymous}}">
                    <Input placeholder="{i18n>name}"/>
                    <Input placeholder="{i18n>lastname}"/>
                    <Input placeholder="{i18n>phoneNumber}"/>
                    <Input placeholder="{i18n>emailAdress}"/>
                </VBox>

                <VBox class="sapUiMediumMarginTop">
                    <Label text="{i18n>describeActivity}"/>
                    <TextArea placeholder="Enter Text" growing="true" growingMaxLines="7" width="100%"/>
                    <!-- add picture/video -->
                </VBox>


                <VBox class="sapUiMediumMarginTop">
                    <Label text="{i18n>location}"/>
                    <Input placeholder="{i18n>adress}"/>
                    <Input placeholder="{i18n>city}"/>
                    <Input placeholder="{i18n>county}"/>
                    <Button text="{i18n>mapPinSelect}"/>
                </VBox>

                <VBox class="sapUiMediumMarginTop">
                    <Label text="{i18n>WhatTypeOfLocation}"/>
                    <HBox >
                        <RadioButtonGroup columns="5">
                            <RadioButton text="{i18n>privateResidence}"/>
                            <RadioButton text="{i18n>business}"/>
                            <RadioButton text="{i18n>park/woodedArea/field}"/>
                            <RadioButton text="{i18n>sidewalk/street}"/>
                            <RadioButton text="{i18n>privateTerrain}"/>
                        </RadioButtonGroup>
                    </HBox>
                </VBox>


                <VBox class="sapUiMediumMarginTop">
                    <Label text="{i18n>isThisReccuring}"/>
                    <Switch state="{visibilityModel>/isReccuring}" customTextOn="Yes" customTextOff="No">
                        <layoutData>
                            <FlexItemData growFactor="1" />
                        </layoutData>
                    </Switch>
                </VBox>

                <VBox visible="{visibilityModel>/isReccuring}" class="sapUiMediumMarginTop">
                    <Label text="{i18n>whenDoesThisUsuallyOccur}"/>
                    <RadioButtonGroup columns="5">
                        <RadioButton text="{i18n>morning}"/>
                        <RadioButton text="{i18n>afternoon}"/>
                        <RadioButton text="{i18n>evening}"/>
                        <RadioButton text="{i18n>overnight}"/>
                    </RadioButtonGroup>
                </VBox>

                <VBox class="sapUiMediumMarginTop">
                    <Label text="{i18n>haveYouSeenAnIndividualDoingThisOr}"/>
                    <Switch state="{visibilityModel>/individuals}" customTextOn="Yes" customTextOff="No">
                        <layoutData>
                            <FlexItemData growFactor="1" />
                        </layoutData>
                    </Switch>
                </VBox>


                <VBox visible="{visibilityModel>/individuals}" class="sapUiMediumMarginTop">
                    <Title text ="{i18n>individualsInvolved}"/>
                    <c:Fragment fragmentName="greenlife.view.fragments.IndividualsForm" type="XML" />
                    <Button text="{i18n>addIndividual}"/>
                </VBox>
            </VBox>
        </content>
    </Page>
</mvc:View>