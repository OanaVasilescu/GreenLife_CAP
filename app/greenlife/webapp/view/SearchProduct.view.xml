<mvc:View controllerName="greenlife.controller.SearchProduct"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:ndc="sap.ndc">

    <NavContainer id="wizardNavContainer">
        <pages>
            <Page id="wizardContentPage" showHeader="false">
                <content>
                    <Wizard id="recycleProductsWizard" complete="completedHandler" enableBranching="true" showNextButton="false" class="sapUiResponsivePadding--header sapUiResponsivePadding--content">
                        <WizardStep id="categoriesWizardStep" title="{i18n>categoriesWizardStep}" icon="sap-icon://split" subsequentSteps="paperAndCardboardStep, plasticAndPetStep, electroStep, metalAndAluStep, glassStep, dangerousStep, automotoStep, constructionsStep, woodStep, textileStep, othersStep">
                            <VBox class="sapUiLargeMarginTop sapUiLargeMarginBegin">
                                <HBox>
                                    <GenericTile id="paperAndCardboard" class="" header="{i18n>paperAndCardboard}" press="chooseCategory">
                                        <TileContent>
                                            <ImageContent src="sap-icon://solid-icons/boxes-packing"/>
                                        </TileContent>
                                    </GenericTile>
                                    <GenericTile id="plasticAndPet" class="" header="{i18n>plasticAndPet}" press="chooseCategory">
                                        <TileContent>
                                            <ImageContent src="sap-icon://solid-icons/bottle-water"/>
                                        </TileContent>
                                    </GenericTile>
                                    <GenericTile id="electro" class="" header="{i18n>electro}" press="chooseCategory">
                                        <TileContent>
                                            <ImageContent src="sap-icon://solid-icons/camera-retro"/>
                                        </TileContent>
                                    </GenericTile>
                                    <GenericTile id="metalAndAlu" class="" header="{i18n>metalAndAlu}" press="chooseCategory">
                                        <TileContent>
                                            <ImageContent src="sap-icon://solid-icons/anchor"/>
                                        </TileContent>
                                    </GenericTile>
                                    <GenericTile id="glass" class="" header="{i18n>glass}" press="chooseCategory">
                                        <TileContent>
                                            <ImageContent src="sap-icon://solid-icons/wine-bottle"/>
                                        </TileContent>
                                    </GenericTile>
                                </HBox>
                                <HBox>
                                    <GenericTile id="dangerous" class="smallTiles" header="{i18n>dangerous}" press="chooseCategory">
                                        <TileContent>
                                            <ImageContent src="sap-icon://solid-icons/spray-can"/>
                                        </TileContent>
                                    </GenericTile>
                                    <GenericTile id="automoto" class="smallTiles" header="{i18n>automoto}" press="chooseCategory">
                                        <TileContent>
                                            <ImageContent src="sap-icon://solid-icons/car-side"/>
                                        </TileContent>
                                    </GenericTile>
                                    <GenericTile id="constructions" class="smallTiles" header="{i18n>constructions}" press="chooseCategory">
                                        <TileContent>
                                            <ImageContent src="sap-icon://solid-icons/person-digging"/>
                                        </TileContent>
                                    </GenericTile>
                                    <GenericTile id="wood" class="smallTiles" header="{i18n>wood}" press="chooseCategory">
                                        <TileContent>
                                            <ImageContent src="sap-icon://solid-icons/tree"/>
                                        </TileContent>
                                    </GenericTile>
                                    <GenericTile id="textile" class="smallTiles" header="{i18n>textile}" press="chooseCategory">
                                        <TileContent>
                                            <ImageContent src="sap-icon://solid-icons/shirt"/>
                                        </TileContent>
                                    </GenericTile>
                                    <GenericTile id="others" class="smallTiles" header="{i18n>others}" press="chooseCategory">
                                        <TileContent>
                                            <ImageContent src="sap-icon://solid-icons/robot"/>
                                        </TileContent>
                                    </GenericTile>
                                </HBox>
                            </VBox>
                        </WizardStep>
                        <WizardStep id="paperAndCardboardStep" title="{i18n>subcategoriesWizardStep}" icon="sap-icon://split">
                            <GenericTile class="greenTile" header="{i18n>paperAndCardboard}">
                                <TileContent>
                                    <ImageContent src="sap-icon://solid-icons/boxes-packing"/>
                                </TileContent>
                            </GenericTile>
                        </WizardStep>
                        <WizardStep id="plasticAndPetStep" title="{i18n>subcategoriesWizardStep}" icon="sap-icon://split">
                            <GenericTile class="greenTile" header="{i18n>paperAndCardboard}">
                                <TileContent>
                                    <ImageContent src="sap-icon://solid-icons/bottle-water"/>
                                </TileContent>
                            </GenericTile>
                        </WizardStep>
                        <WizardStep id="electroStep" title="{i18n>subcategoriesWizardStep}" icon="sap-icon://split">
                            <GenericTile class="greenTile" header="{i18n>paperAndCardboard}">
                                <TileContent>
                                    <ImageContent src="sap-icon://solid-icons/camera-retro"/>
                                </TileContent>
                            </GenericTile>
                        </WizardStep>
                        <WizardStep id="metalAndAluStep" title="{i18n>subcategoriesWizardStep}" icon="sap-icon://split">
                            <GenericTile class="greenTile" header="{i18n>paperAndCardboard}">
                                <TileContent>
                                    <ImageContent src="sap-icon://solid-icons/anchor"/>
                                </TileContent>
                            </GenericTile>
                        </WizardStep>
                        <WizardStep id="glassStep" title="{i18n>subcategoriesWizardStep}" icon="sap-icon://split">
                            <GenericTile class="greenTile" header="{i18n>paperAndCardboard}">
                                <TileContent>
                                    <ImageContent src="sap-icon://solid-icons/wine-bottle"/>
                                </TileContent>
                            </GenericTile>
                        </WizardStep>
                        <WizardStep id="dangerousStep" title="{i18n>subcategoriesWizardStep}" icon="sap-icon://split">
                            <GenericTile class="greenTile" header="{i18n>paperAndCardboard}">
                                <TileContent>
                                    <ImageContent src="sap-icon://solid-icons/spray-can"/>
                                </TileContent>
                            </GenericTile>
                        </WizardStep>
                        <WizardStep id="automotoStep" title="{i18n>subcategoriesWizardStep}" icon="sap-icon://split">
                            <GenericTile class="greenTile" header="{i18n>paperAndCardboard}">
                                <TileContent>
                                    <ImageContent src="sap-icon://solid-icons/car-side"/>
                                </TileContent>
                            </GenericTile>
                        </WizardStep>
                        <WizardStep id="constructionsStep" title="{i18n>subcategoriesWizardStep}" icon="sap-icon://split">
                            <GenericTile class="greenTile" header="{i18n>paperAndCardboard}">
                                <TileContent>
                                    <ImageContent src="sap-icon://solid-icons/person-digging"/>
                                </TileContent>
                            </GenericTile>
                        </WizardStep>
                        <WizardStep id="woodStep" title="{i18n>subcategoriesWizardStep}" icon="sap-icon://split">
                            <GenericTile class="greenTile" header="{i18n>paperAndCardboard}">
                                <TileContent>
                                    <ImageContent src="sap-icon://solid-icons/tree"/>
                                </TileContent>
                            </GenericTile>
                        </WizardStep>
                        <WizardStep id="textileStep" title="{i18n>subcategoriesWizardStep}" icon="sap-icon://split">
                            <GenericTile class="greenTile" header="{i18n>paperAndCardboard}">
                                <TileContent>
                                    <ImageContent src="sap-icon://solid-icons/shirt"/>
                                </TileContent>
                            </GenericTile>
                        </WizardStep>
                        <WizardStep id="othersStep" title="{i18n>subcategoriesWizardStep}" icon="sap-icon://split">
                            <GenericTile class="greenTile" header="{i18n>paperAndCardboard}">
                                <TileContent>
                                    <ImageContent src="sap-icon://solid-icons/robot"/>
                                </TileContent>
                            </GenericTile>
                        </WizardStep>
                    </Wizard>
                </content>
                <footer>
                    <OverflowToolbar>
                        <ToolbarSpacer/>
                        <Button text="Cancel" press="handleWizardCancel"/>
                    </OverflowToolbar>
                </footer>
            </Page>
        </pages>
    </NavContainer>
</mvc:View>