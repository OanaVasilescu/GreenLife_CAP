<mvc:View controllerName="greenlife.controller.Overview"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core">
    <Page id="page" showHeader="false" class="wrapper">
        <l:BlockLayout id="BlockLayout" background="Default">
            <l:BlockLayoutRow>
                <l:BlockLayoutCell class="sapUiNoContentPadding overlayParent">
                    <Image id="bckgImage" height="42rem" width="110rem" mode="Background" class="parallax"/>
                    <Image id="logoImage" class="logoOverlayChild" />
                </l:BlockLayoutCell>
            </l:BlockLayoutRow>
            <l:BlockLayoutRow>
                <l:BlockLayoutCell backgroundColorSet="ColorSet11" backgroundColorShade="ShadeC">
                    <VBox alignItems="Center">
                        <core:Icon src="sap-icon://search" size="2.5rem" color="Default"/>
                        <Title id="searchProductTile" text="{i18n>searchTitle}" level="H3" titleStyle="H2" class="sapUiTinyMarginTopBottom"/>
                        <Text text="{i18n>searchProductContent}" class="sapUiTinyMarginBottom"/>
                        <Link text="{i18n>accessLink}" press="pressSearchProduct"/>
                    </VBox>
                </l:BlockLayoutCell>
            </l:BlockLayoutRow>



            <l:BlockLayoutRow>
                <l:BlockLayoutCell class="sapUiNoContentPadding">
                    <Image id="bckgImagePlantBefore" height="20rem" width="110rem" mode="Background" class="parallax"/>
                </l:BlockLayoutCell>
            </l:BlockLayoutRow>
            <l:BlockLayoutRow>
                <l:BlockLayoutCell class="sapUiNoContentPadding overlayParent">
                    <Image id="bckgImagePlantSmallOn" height="20rem" width="110rem" mode="Background" class="parallax blur" press="pressSearchProduct"/>
                    <VBox class="overlayChild" alignItems="Center">
                        <core:Icon src="sap-icon://search" size="2.5rem" color="Default"/>
                        <Title id="searchProductTile1" text="{i18n>searchTitle}" level="H3" titleStyle="H2" class="sapUiTinyMarginTopBottom"/>
                        <Text text="{i18n>searchProductContent}" class="sapUiTinyMarginBottom"/>
                        <Link text="{i18n>accessLink}" press="pressSearchProduct"/>
                    </VBox>
                </l:BlockLayoutCell>
            </l:BlockLayoutRow>
            <l:BlockLayoutRow>
                <l:BlockLayoutCell class="sapUiNoContentPadding">
                    <Image id="bckgImagePlantAfter" height="20rem" width="110rem" mode="Background" class="parallax"/>
                </l:BlockLayoutCell>
            </l:BlockLayoutRow>



            <l:BlockLayoutRow>
                <l:BlockLayoutCell class="sapUiNoContentPadding">
                    <Image id="bckgImageWaterBefore" height="20rem" width="110rem" mode="Background" class="parallax"/>
                </l:BlockLayoutCell>
            </l:BlockLayoutRow>
            <l:BlockLayoutRow>
                <l:BlockLayoutCell class="sapUiNoContentPadding overlayParent" backgroundColorSet="ColorSet11" backgroundColorShade="ShadeD">
                    <Image id="bckgImageWaterOn" height="20rem" width="110rem" mode="Background" class="parallax blur "/>
                    <VBox class="overlayChild" alignItems="Center">
                        <core:Icon src="sap-icon://map-2" size="2.5rem" color="Default"/>
                        <Title text="{i18n>seeRecyclingMap}" level="H3" titleStyle="H2" class="sapUiTinyMarginTopBottom"/>
                        <Text text="{i18n>seeRecyclingMapContent}" class="sapUiTinyMarginBottom"/>
                        <Link text="{i18n>accessLink}" press="pressSeeMap"/>
                    </VBox>
                </l:BlockLayoutCell>
            </l:BlockLayoutRow>
            <l:BlockLayoutRow>
                <l:BlockLayoutCell class="sapUiNoContentPadding">
                    <Image id="bckgImageWaterAfter" height="20rem" width="110rem" mode="Background" class="parallax"/>
                </l:BlockLayoutCell>
            </l:BlockLayoutRow>

        </l:BlockLayout>
    </Page>
</mvc:View>