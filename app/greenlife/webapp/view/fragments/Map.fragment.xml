<core:FragmentDefinition xmlns="sap.m"
    xmlns:vk="sap.ui.vk"
    xmlns:vbm="sap.ui.vbm"
    xmlns:core="sap.ui.core">
    <vk:MapContainer>
        <vk:content>
            <vk:ContainerContent title="{i18n>recyclingMap}" icon="sap-icon://geographic-bubble-chart">
                <vk:content>
                    <vbm:GeoMap id="map" centerPosition="{mapModel>/center}" initialZoom="{mapModel>/initialZoom}" width="100%" height="100%" mapConfiguration="{mapConfigModel>/config}"/>
                </vk:content>
            </vk:ContainerContent>
        </vk:content>
    </vk:MapContainer>
</core:FragmentDefinition>