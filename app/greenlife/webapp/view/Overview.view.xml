<mvc:View controllerName="greenlife.controller.Overview"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core">
    <Page id="page" showHeader="false" class="wrapper">
        <l:BlockLayout id="BlockLayout" background="Default">
            <l:BlockLayoutRow>
                <l:BlockLayoutCell class="sapUiNoContentPadding overlayParent">
                    <Image id="bckgImage" height="42rem" width="110rem" mode="Background" class="parallax"/>
                    <Image id="logoImage" class="logoOverlayChild" />
                </l:BlockLayoutCell>
            </l:BlockLayoutRow>
            <l:BlockLayoutRow>
                <l:BlockLayoutCell backgroundColorSet="ColorSet11" backgroundColorShade="ShadeC">
                    <VBox alignItems="Center" height="10rem">
                        <Title text="{i18n>title}" titleStyle="H1" class="sapUiTinyMarginTopBottom"/>
                        <Title text="{i18n>appDescription}" titleStyle="H2" class="sapUiTinyMarginBottom"/>
                    </VBox>
                </l:BlockLayoutCell>
            </l:BlockLayoutRow>



            <l:BlockLayoutRow>
                <l:BlockLayoutCell class="sapUiNoContentPadding">
                    <Image id="bckgImagePlantBefore" height="20rem" width="110rem" mode="Background" class="parallax"/>
                </l:BlockLayoutCell>
            </l:BlockLayoutRow>
            <l:BlockLayoutRow>
                <l:BlockLayoutCell class="sapUiNoContentPadding overlayParent whiteText">
                    <Image id="bckgImagePlantSmallOn" height="20rem" width="110rem" mode="Background" class="parallax blur" press="pressSearchProduct"/>
                    <VBox class="overlayChild" alignItems="Center">
                        <Title id="searchProductTile" text="{i18n>searchTitle}" titleStyle="H1" class="sapUiTinyMarginTopBottom"/>
                        <Title text="{i18n>searchProductContent}" titleStyle="H2" class="sapUiTinyMarginBottom"/>
                    </VBox>
                </l:BlockLayoutCell>
            </l:BlockLayoutRow>
            <l:BlockLayoutRow>
                <l:BlockLayoutCell class="sapUiNoContentPadding">
                    <Image id="bckgImagePlantAfter" height="20rem" width="110rem" mode="Background" class="parallax"/>
                </l:BlockLayoutCell>
            </l:BlockLayoutRow>



            <l:BlockLayoutRow>
                <l:BlockLayoutCell class="sapUiNoContentPadding">
                    <Image id="bckgImageWaterBefore" height="20rem" width="110rem" mode="Background" class="parallax"/>
                </l:BlockLayoutCell>
            </l:BlockLayoutRow>
            <l:BlockLayoutRow>
                <l:BlockLayoutCell class="sapUiNoContentPadding overlayParent whiteText">
                    <Image id="bckgImageWaterOn" height="20rem" width="110rem" mode="Background" class="parallax blur" press="pressSeeMap"/>
                    <VBox class="overlayChild" alignItems="Center">
                        <Title text="{i18n>seeRecyclingMap}" titleStyle="H1" class="sapUiTinyMarginTopBottom"/>
                        <Title text="{i18n>seeRecyclingMapContent}" titleStyle="H2" class="sapUiTinyMarginBottom"/>
                    </VBox>
                </l:BlockLayoutCell>
            </l:BlockLayoutRow>
            <l:BlockLayoutRow>
                <l:BlockLayoutCell class="sapUiNoContentPadding">
                    <Image id="bckgImageWaterAfter" height="20rem" width="110rem" mode="Background" class="parallax"/>
                </l:BlockLayoutCell>
            </l:BlockLayoutRow>

        </l:BlockLayout>
    </Page>
</mvc:View>