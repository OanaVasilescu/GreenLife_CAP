<mvc:View controllerName="greenlife.controller.SearchProduct"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:ndc="sap.ndc">

    <NavContainer id="wizardNavContainer">
        <pages>
            <Page id="wizardContentPage" showHeader="false" backgroundDesign="Transparent">
                <content>
                    <f:GridContainer class="sapUiMediumMargin">
                        <f:layout>
                            <f:GridContainerSettings rowSize="84px" columnSize="84px" gap="0px"/>
                        </f:layout>

                        <Wizard id="recycleProductsWizard" complete="completedHandler" enableBranching="true" showNextButton="false">
                            <layoutData>
                                <f:GridContainerItemLayoutData minRows="9" columns="12" />
                            </layoutData>
                            <WizardStep id="introStep" nextStep="categoriesWizardStep" icon="sap-icon://solid-icons/recycle" class="sapUiLargeMarginTop sapUiLargeMarginBegin">

                                <GenericTile id="searchTile" header="{i18n>searchCategories}" press="chooseScanOrSearch" class="glTile">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/magnifying-glass"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="scanTile" header="{i18n>scanBarcode}" press="chooseScanOrSearch" class="glTile">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/barcode"/>
                                    </TileContent>
                                </GenericTile>
                            </WizardStep>



                            <WizardStep id="categoriesWizardStep" title="{i18n>categoriesWizardStep}" icon="sap-icon://split" subsequentSteps="paperAndCardboardStep, plasticAndPetStep, electroStep, metalAndAluStep, glassStep, dangerousStep, automotoStep, constructionsStep, woodStep, textileStep, othersStep">
                                <VBox class="sapUiLargeMarginTop sapUiLargeMarginBegin">
                                    <HBox>
                                        <GenericTile id="paperAndCardboard" class="" header="{i18n>paperAndCardboard}" press="chooseCategory">
                                            <TileContent>
                                                <ImageContent src="sap-icon://solid-icons/boxes-packing"/>
                                            </TileContent>
                                        </GenericTile>
                                        <GenericTile id="plasticAndPet" class="" header="{i18n>plasticAndPet}" press="chooseCategory">
                                            <TileContent>
                                                <ImageContent src="sap-icon://solid-icons/bottle-water"/>
                                            </TileContent>
                                        </GenericTile>
                                        <GenericTile id="electro" class="" header="{i18n>electro}" press="chooseCategory">
                                            <TileContent>
                                                <ImageContent src="sap-icon://solid-icons/camera-retro"/>
                                            </TileContent>
                                        </GenericTile>
                                        <GenericTile id="metalAndAlu" class="" header="{i18n>metalAndAlu}" press="chooseCategory">
                                            <TileContent>
                                                <ImageContent src="sap-icon://solid-icons/anchor"/>
                                            </TileContent>
                                        </GenericTile>
                                        <GenericTile id="glass" class="" header="{i18n>glass}" press="chooseCategory">
                                            <TileContent>
                                                <ImageContent src="sap-icon://solid-icons/wine-bottle"/>
                                            </TileContent>
                                        </GenericTile>
                                    </HBox>
                                    <HBox>
                                        <GenericTile id="dangerous" class="smallTiles" header="{i18n>dangerous}" press="chooseCategory">
                                            <TileContent>
                                                <ImageContent src="sap-icon://solid-icons/spray-can"/>
                                            </TileContent>
                                        </GenericTile>
                                        <GenericTile id="automoto" class="smallTiles" header="{i18n>automoto}" press="chooseCategory">
                                            <TileContent>
                                                <ImageContent src="sap-icon://solid-icons/car"/>
                                            </TileContent>
                                        </GenericTile>
                                        <GenericTile id="constructions" class="smallTiles" header="{i18n>constructions}" press="chooseCategory">
                                            <TileContent>
                                                <ImageContent src="sap-icon://solid-icons/person-digging"/>
                                            </TileContent>
                                        </GenericTile>
                                        <GenericTile id="wood" class="smallTiles" header="{i18n>wood}" press="chooseCategory">
                                            <TileContent>
                                                <ImageContent src="sap-icon://solid-icons/tree"/>
                                            </TileContent>
                                        </GenericTile>
                                        <GenericTile id="textile" class="smallTiles" header="{i18n>textile}" press="chooseCategory">
                                            <TileContent>
                                                <ImageContent src="sap-icon://solid-icons/shirt"/>
                                            </TileContent>
                                        </GenericTile>
                                        <GenericTile id="others" class="smallTiles" header="{i18n>others}" press="chooseCategory">
                                            <TileContent>
                                                <ImageContent src="sap-icon://solid-icons/robot"/>
                                            </TileContent>
                                        </GenericTile>
                                    </HBox>
                                </VBox>
                            </WizardStep>


                            <WizardStep id="paperAndCardboardStep" title="{i18n>subcategoriesWizardStep}" icon="sap-icon://solid-icons/boxes-packing" class="sapUiLargeMarginTop sapUiLargeMarginBegin">
                                <GenericTile id="paperTile" header="{i18n>paper}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://regular-icons/note-sticky"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="cardboardTile" header="{i18n>cardboard}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/box-open"/>
                                    </TileContent>
                                </GenericTile>
                            </WizardStep>


                            <WizardStep id="plasticAndPetStep" title="{i18n>subcategoriesWizardStep}" icon="sap-icon://solid-icons/bottle-water" class="sapUiLargeMarginTop sapUiLargeMarginBegin">
                                <GenericTile id="petTile" header="{i18n>pet}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/bottle-water"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="boxesTile" header="{i18n>boxes}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/inbox"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="bottleTile" header="{i18n>bottle}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/prescription-bottle"/>
                                    </TileContent>
                                </GenericTile>
                            </WizardStep>


                            <WizardStep id="electroStep" title="{i18n>subcategoriesWizardStep}" icon="sap-icon://solid-icons/camera-retro" class="sapUiLargeMarginTop sapUiLargeMarginBegin">
                                <GenericTile id="printerTile" header="{i18n>print}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/print"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="bulbsTile" header="{i18n>lightBulbs}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/lightbulb"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="batteriesTile" header="{i18n>batteries}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/battery-quarter"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="mobilesTile" header="{i18n>mobiles}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/mobile-screen"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="largeApplianceTile" header="{i18n>largeAppliance}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/tv"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="smallApplianceTile" header="{i18n>smallAppliance}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/camera-retro"/>
                                    </TileContent>
                                </GenericTile>
                            </WizardStep>


                            <WizardStep id="metalAndAluStep" title="{i18n>subcategoriesWizardStep}" icon="sap-icon://solid-icons/anchor" class="sapUiLargeMarginTop sapUiLargeMarginBegin">
                                <VBox>
                                    <HBox>
                                        <GenericTile id="zincTile" header="{i18n>zinc}" press="chooseSubcategory">
                                            <TileContent>
                                                <ImageContent src="sap-icon://solid-icons/recycle"/>
                                            </TileContent>
                                        </GenericTile>
                                        <GenericTile id="leadTile" header="{i18n>plumb}" press="chooseSubcategory">
                                            <TileContent>
                                                <ImageContent src="sap-icon://solid-icons/recycle"/>
                                            </TileContent>
                                        </GenericTile>
                                        <GenericTile id="steelTile" header="{i18n>steel}" press="chooseSubcategory">
                                            <TileContent>
                                                <ImageContent src="sap-icon://solid-icons/recycle"/>
                                            </TileContent>
                                        </GenericTile>
                                        <GenericTile id="stainlessTile" header="{i18n>stainlessSteel}" press="chooseSubcategory">
                                            <TileContent>
                                                <ImageContent src="sap-icon://solid-icons/recycle"/>
                                            </TileContent>
                                        </GenericTile>
                                        <GenericTile id="ironTile" header="{i18n>iron}" press="chooseSubcategory">
                                            <TileContent>
                                                <ImageContent src="sap-icon://solid-icons/recycle"/>
                                            </TileContent>
                                        </GenericTile>
                                    </HBox>
                                    <HBox>
                                        <GenericTile id="brassTile" class="smallTiles" header="{i18n>brass}" press="chooseSubcategory">
                                            <TileContent>
                                                <ImageContent src="sap-icon://solid-icons/recycle"/>
                                            </TileContent>
                                        </GenericTile>
                                        <GenericTile id="cansTile" class="smallTiles" header="{i18n>cans}" press="chooseSubcategory">
                                            <TileContent>
                                                <ImageContent src="sap-icon://solid-icons/recycle"/>
                                            </TileContent>
                                        </GenericTile>
                                        <GenericTile id="capsTile" class="smallTiles" header="{i18n>metalCaps}" press="chooseSubcategory">
                                            <TileContent>
                                                <ImageContent src="sap-icon://solid-icons/recycle"/>
                                            </TileContent>
                                        </GenericTile>
                                        <GenericTile id="aerosolTile" class="smallTiles" header="{i18n>aluminumAerosolTubes}" press="chooseSubcategory">
                                            <TileContent>
                                                <ImageContent src="sap-icon://solid-icons/recycle"/>
                                            </TileContent>
                                        </GenericTile>
                                        <GenericTile id="aluFoilTile" class="smallTiles" header="{i18n>aluFoil}" press="chooseSubcategory">
                                            <TileContent>
                                                <ImageContent src="sap-icon://solid-icons/recycle"/>
                                            </TileContent>
                                        </GenericTile>
                                        <GenericTile id="aluCansTile" class="smallTiles" header="{i18n>aluCans}" press="chooseSubcategory">
                                            <TileContent>
                                                <ImageContent src="sap-icon://solid-icons/recycle"/>
                                            </TileContent>
                                        </GenericTile>
                                    </HBox>
                                </VBox>
                            </WizardStep>


                            <WizardStep id="glassStep" title="{i18n>subcategoriesWizardStep}" icon="sap-icon://solid-icons/wine-bottle" class="sapUiLargeMarginTop sapUiLargeMarginBegin">
                                <GenericTile id="glassTile" header="{i18n>glass}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/wine-bottle"/>
                                    </TileContent>
                                </GenericTile>
                            </WizardStep>
                            <WizardStep id="dangerousStep" title="{i18n>subcategoriesWizardStep}" icon="sap-icon://solid-icons/spray-can" class="sapUiLargeMarginTop sapUiLargeMarginBegin">
                                <GenericTile id="masksTile" header="{i18n>masks}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/mask-face"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="fertilizerTile" header="{i18n>fertilizer}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/carrot"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="herbicidesTile" header="{i18n>herbicides}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/plant-wilt"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="pesticidesTile" header="{i18n>pesticides}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/bugs"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="paintTile" header="{i18n>paint}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/fill-drip"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="solventTile" header="{i18n>solvent}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/bottle-droplet"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="medicineTile" header="{i18n>medicine}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/capsules"/>
                                    </TileContent>
                                </GenericTile>
                            </WizardStep>


                            <WizardStep id="automotoStep" title="{i18n>subcategoriesWizardStep}" icon="sap-icon://solid-icons/car-side" class="sapUiLargeMarginTop sapUiLargeMarginBegin">
                                <GenericTile id="tireTile" header="{i18n>tire}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/car-side"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="windshieldTile" header="{i18n>windshield}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/window-maximize"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="eofTile" header="{i18n>eof}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/skull-crossbones"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="oilTile" header="{i18n>oil}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/oil-can"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="carBatteriesTile" header="{i18n>car-batteries}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/car-battery"/>
                                    </TileContent>
                                </GenericTile>
                            </WizardStep>


                            <WizardStep id="constructionsStep" title="{i18n>subcategoriesWizardStep}" icon="sap-icon://solid-icons/person-digging" class="sapUiLargeMarginTop sapUiLargeMarginBegin">
                                <GenericTile id="polystyreneTile" header="{i18n>polystyrene}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/house-chimney-window"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="demWoodTile" header="{i18n>demWood}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/door-closed"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="bricksTile" header="{i18n>bricks}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/trowel-bricks"/>
                                    </TileContent>
                                </GenericTile>
                            </WizardStep>


                            <WizardStep id="woodStep" title="{i18n>subcategoriesWizardStep}" icon="sap-icon://solid-icons/tree" class="sapUiLargeMarginTop sapUiLargeMarginBegin">
                                <GenericTile id="palletsTile" header="{i18n>pallets}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/ruler-horizontal"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="sawdustTile" header="{i18n>sawdust}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/mound"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="furnitureTile" header="{i18n>furniture}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/chair"/>
                                    </TileContent>
                                </GenericTile>
                            </WizardStep>


                            <WizardStep id="textileStep" title="{i18n>subcategoriesWizardStep}" icon="sap-icon://solid-icons/shirt" class="sapUiLargeMarginTop sapUiLargeMarginBegin">
                                <GenericTile id="clothesTile" header="{i18n>clothes}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/shirt"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="preProdTile" header="{i18n>preProdTextile}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/recycle"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="bagsTile" header="{i18n>bags}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/bag-shopping"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="shoesTile" header="{i18n>shoes}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/shoe-prints"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="otherTextilesTile" header="{i18n>otherTextiles}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/bed"/>
                                    </TileContent>
                                </GenericTile>
                            </WizardStep>


                            <WizardStep id="othersStep" title="{i18n>subcategoriesWizardStep}" icon="sap-icon://solid-icons/robot" class="sapUiLargeMarginTop sapUiLargeMarginBegin">
                                <GenericTile id="toysTile" header="{i18n>toys}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/robot"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="organicTile" header="{i18n>organicWaste}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/drumstick-bite"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="meshTile" header="{i18n>mesh}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/recycle"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="tetraPakTile" header="{i18n>tetraPak}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/recycle"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="foodOilTile" header="{i18n>foodOil}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/bacon"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="opticTile" header="{i18n>opticFiber}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/ethernet"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="waterFiltersTile" header="{i18n>waterFilters}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/water"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="absTile" header="{i18n>abs}" press="chooseSubcategory">
                                    <TileContent>
                                        <ImageContent src="sap-icon://solid-icons/recycle"/>
                                    </TileContent>
                                </GenericTile>
                            </WizardStep>
                        </Wizard>

                        <VBox id="instructionsBox" backgroundDesign="Solid" height="100%" visible="false">
                            <layoutData>
                                <f:GridContainerItemLayoutData minRows="9" columns="12" />
                            </layoutData>
                            <Title text="{instructionsModel>/title}" titleStyle="H1" class="sapUiLargeMargin pathwayGothic"/>

                            <FormattedText htmlText="{instructionsModel>/howToCollectTitle}" class="sapUiLargeMarginBeginEnd  pathwayGothic"/>
                            <FormattedText htmlText="{instructionsModel>/howToCollect}" class="sapUiLargeMarginBeginEnd pathwayGothic"/>

                            <FormattedText htmlText="{instructionsModel>/restrictionsTitle}" class="sapUiLargeMarginBeginEnd sapUiLargeMarginTop pathwayGothic"/>
                            <FormattedText htmlText="{instructionsModel>/restrictions}" class="sapUiLargeMarginBeginEnd pathwayGothic"/>

                            <FormattedText htmlText="{instructionsModel>/howToRecycleTitle}" class="sapUiLargeMarginBeginEnd sapUiLargeMarginTop pathwayGothic"/>
                            <FormattedText htmlText="{instructionsModel>/howToRecycle}" class="sapUiLargeMarginBeginEnd pathwayGothic"/>
                        </VBox>



                        <VBox id="detailsBox" backgroundDesign="Solid" height="100%">
                            <layoutData>
                                <f:GridContainerItemLayoutData minRows="9" columns="7" />
                            </layoutData>
                            <Title text="{detailsModel>/title}" titleStyle="H1" class="sapUiLargeMargin pathwayGothic"/>
                            <FormattedText htmlText="{detailsModel>/text}" class="sapUiLargeMargin "/>
                        </VBox>

                        <Image id="pictureBox" height="100%" width="100%" visible="false" mode="Background">
                            <layoutData>
                                <f:GridContainerItemLayoutData minRows="9" columns="7" />
                            </layoutData>
                        </Image>

                    </f:GridContainer>
                </content>
                <footer>
                    <OverflowToolbar>
                        <ToolbarSpacer/>
                        <Button text="Cancel" press="handleWizardCancel"/>
                    </OverflowToolbar>
                </footer>
            </Page>
        </pages>
    </NavContainer>
</mvc:View>