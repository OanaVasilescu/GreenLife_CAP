<mvc:View controllerName="greenlife.controller.RecyclingMap"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:vbm="sap.ui.vbm"
    xmlns:l="sap.ui.layout"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:vk="sap.ui.vk">
    <Page id="mapPage" showHeader="false" backgroundDesign="Transparent">
        <content>
            <l:FixFlex class="fixFlexVertical" id="mapContainer">
                <l:fixContent>
                    <fb:FilterBar showFilterConfiguration="false" width="100%">
                        <fb:filterItems>
                            <fb:FilterItem name="material" label="{i18n>material}">
                                <fb:control>
                                    <MultiComboBox id="multiCombo" type="Text" change="onChange" items="{
                                            path:'materialsModel>/material',
                                            sorter:{path: 'name'}
                                        }">
                                        <c:Item key="{materialsModel>key}" text="{materialsModel>name}"/>
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterItem>

                            <fb:FilterItem name="localitate" label="{i18n>city}">
                                <fb:control>
                                    <ComboBox type="Text" change="onChange">
                                        <items>
                                            <c:Item key="timi" text="{i18n>Timisoara}"/>
                                            <c:Item key="buc" text="{i18n>Bucuresti}"/>
                                        </items>
                                    </ComboBox>
                                </fb:control>
                            </fb:FilterItem>

                            <fb:FilterItem name="recompensa" label="{i18n>reward}">
                                <fb:control>
                                    <ComboBox type="dropDownList" change="onChange">
                                        <items>
                                            <c:Item key="timi" text="{i18n>yes}"/>
                                            <c:Item key="buc" text="{i18n>no}"/>
                                            <c:Item key="buc" text="{i18n>irrelevant}"/>
                                        </items>
                                    </ComboBox>
                                </fb:control>
                            </fb:FilterItem>
                        </fb:filterItems>
                    </fb:FilterBar>
                    <VBox alignItems="Center" width="100%" BackgroundDesign="solid" class="waterTexture">
                        <Button text="{i18n>submitMissingMapData}" class="sapUiTinyMargin"/>
                    </VBox>
                </l:fixContent>


                <!-- <vk:MapContainer>
                        <vk:content>
                            <vk:ContainerContent title="{i18n>recyclingMap}" icon="sap-icon://geographic-bubble-chart">
                                <vk:content>
                                    <vbm:GeoMap id="map" centerPosition="{mapModel>/center}" initialZoom="13" width="100%" height="100%" mapConfiguration="{mapConfigModel>/config}"/>
                                </vk:content>
                            </vk:ContainerContent>
                        </vk:content>
                    </vk:MapContainer> -->

            </l:FixFlex>
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button text="Cancel" press="handleCancel"/>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>