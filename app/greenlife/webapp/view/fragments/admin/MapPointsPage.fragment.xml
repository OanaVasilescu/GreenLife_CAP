<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Table id="idProductsTable" inset="false" items="{
			path: 'mapPointsModel>/',
			sorter: {
				path: 'locationAddress'
			}
		}">
        <infoToolbar>
            <OverflowToolbar>
                <Label text="Wide range of available products"/>
            </OverflowToolbar>
        </infoToolbar>
        <columns>
            <Column>
                <Text text="{i18n>adress}" />
            </Column>
            <Column>
                <Text text="{i18n>city}" />
            </Column>
            <Column>
                <Text text="{i18n>administeredBy}" />
            </Column>
            <Column demandPopin="true">
                <Text text="{i18n>rewardType}" />
            </Column>
            <Column demandPopin="true">
                <Text text="{i18n>productTypes}" />
            </Column>
        </columns>
        <items>
            <ColumnListItem vAlign="Middle">
                <cells>
                    <Text text="{mapPointsModel>locationAddress}" />
                    <Text text="{mapPointsModel>city}" />
                    <Text text="{mapPointsModel>administeredBy}" />
                    <Text text="{mapPointsModel>rewardType}" />
                    <Text text="{mapPointsModel>productTypes}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>